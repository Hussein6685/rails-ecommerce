<div class="container mx-auto px-4 my-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">تقييم المنتجات</h1>

  <% if @invoices.length == 0 %>
    <div class="bg-white rounded-lg shadow-lg p-8 text-center">
      <div class="text-gray-400 mb-4">
        <svg class="mx-auto h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.196-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z" />
        </svg>
      </div>
      <h3 class="text-xl font-semibold text-gray-800 mb-2">جميع المنتجات تم تقييمها</h3>
      <p class="text-gray-600 mb-4">لا توجد منتجات جديدة تحتاج إلى تقييم في الوقت الحالي</p>
      <a href="/" class="btn btn-primary">تصفح المنتجات</a>
    </div>
  <% else %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @invoices.each do |invoice| %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 border border-gray-100">
          <!-- Product Image -->
          <div class="relative p-4">
            <%= image_tag(invoice.product.image_url, class: "w-full h-48 object-cover rounded-lg shadow-sm", alt: invoice.product.name) %>
          </div>

          <!-- Product Info -->
          <div class="p-4">
            <div class="mb-3">
              <h5 class="text-lg font-bold text-gray-800 mb-1 line-clamp-1"><%= invoice.product.name %></h5>
              <p class="text-gray-600 text-sm line-clamp-2 leading-relaxed"><%= invoice.product.details %></p>
            </div>

            <!-- Rating Form -->
            <%= form_with url: review_create_path, method: :post, local: true, class: "space-y-3" do |form| %>
              <!-- Notes Input -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">ملاحظات</label>
                <%= form.text_area :notes,
                    placeholder: "شارك تجربتك...",
                    class: "w-full px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none resize-none transition-colors",
                    rows: 2,
                    name: "review_text"
                    %>
              </div>

              <!-- Rating Input -->
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">التقييم</label>
                <div class="flex items-center gap-2">
                  <%= form.select :rating,
                      options_for_select([
                        ["اختر التقييم", ""],
                        ["⭐", 1],
                        ["⭐⭐", 2],
                        ["⭐⭐⭐", 3],
                        ["⭐⭐⭐⭐", 4],
                        ["⭐⭐⭐⭐⭐", 5]
                      ]),
                      {},
                      { class: "flex-1 px-3 py-2 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-colors",
                      name: "rating" ,
                      method: :post
                      } %>
                  <%= form.submit "إرسال",
                      class: "px-4 py-2 text-sm bg-blue-600 text-white font-semibold rounded-lg hover:bg-blue-700 transition-colors duration-200" %>
                </div>
                <%= form.hidden_field :invoice_id, value: invoice.id %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
