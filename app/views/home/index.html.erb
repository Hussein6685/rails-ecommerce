<!-- Hero Section -->
<div class="container mx-auto px-4 my-6 relative image-container hover:bg-[rgba(0,0,0,0.88)]">
  <%= image_tag "main-image.jpg", class: "w-full h-auto mx-auto", alt: "shop image" %>
  <div class="image-caption">
    <h1>متجر ألبسة</h1>
    <p>أفضل أنوع الألبسة المحلية والمستوردة</p>
  </div>
</div>

<!-- Filter Section -->
<div class="container mx-auto px-4 my-6 text-center">
  <div class="flex flex-wrap justify-center gap-4">
    <!-- Age Category Dropdown -->
    <div class="relative dropdown">
      <button class="btn-primary flex items-center min-w-48">
        الفئة العمرية
        <svg class="w-4 h-4 mr-2 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <div class="dropdown-menu">
        <a href="#" class="dropdown-item">ولادي</a>
        <a href="#" class="dropdown-item">رجالي</a>
        <a href="#" class="dropdown-item">نسائي</a>
      </div>
    </div>

    <!-- Size Dropdown -->
    <div class="relative dropdown">
      <button class="btn-primary flex items-center min-w-48">
        المقاس
        <svg class="w-4 h-4 mr-2 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <div class="dropdown-menu">
        <a href="#" class="dropdown-item">small</a>
        <a href="#" class="dropdown-item">medium</a>
        <a href="#" class="dropdown-item">large</a>
      </div>
    </div>

    <!-- Price Dropdown -->
    <div class="relative dropdown">
      <button class="btn-primary flex items-center min-w-48">
        السعر
        <svg class="w-4 h-4 mr-2 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <div class="dropdown-menu">
        <a href="#" class="dropdown-item">أقل من 50$</a>
        <a href="#" class="dropdown-item">أقل من 300$</a>
        <a href="#" class="dropdown-item">300$ وأكثر</a>
      </div>
    </div>
  </div>
</div>

