<!-- Hero Section -->
<div class="container mx-auto px-4 my-6 relative image-container hover:bg-[rgba(0,0,0,0.88)]">
  <%= image_tag "main-image.jpg", class: "w-full h-auto mx-auto", alt: "shop image" %>
  <div class="image-caption">
    <h1>متجر ألبسة</h1>
    <p>أفضل أنوع الألبسة المحلية والمستوردة</p>
  </div>
</div>

<!-- Filter Section -->
<div class="container mx-auto px-4 my-6 text-center">
  <div class="flex flex-wrap justify-center gap-4">
    <!-- Age Category Dropdown -->
    <div class="relative dropdown">
      <button class="btn-primary flex items-center min-w-48">
        الفئة العمرية
        <svg class="w-4 h-4 mr-2 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <div class="dropdown-menu">
        <a href="#" class="dropdown-item">ولادي</a>
        <a href="#" class="dropdown-item">رجالي</a>
        <a href="#" class="dropdown-item">نسائي</a>
      </div>
    </div>

    <!-- Size Dropdown -->
    <div class="relative dropdown">
      <button class="btn-primary flex items-center min-w-48">
        المقاس
        <svg class="w-4 h-4 mr-2 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <div class="dropdown-menu">
        <a href="#" class="dropdown-item">small</a>
        <a href="#" class="dropdown-item">medium</a>
        <a href="#" class="dropdown-item">large</a>
      </div>
    </div>

    <!-- Price Dropdown -->
    <div class="relative dropdown">
      <button class="btn-primary flex items-center min-w-48">
        السعر
        <svg class="w-4 h-4 mr-2 transform transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
        </svg>
      </button>
      <div class="dropdown-menu">
        <a href="#" class="dropdown-item">أقل من 50$</a>
        <a href="#" class="dropdown-item">أقل من 300$</a>
        <a href="#" class="dropdown-item">300$ وأكثر</a>
      </div>
    </div>
  </div>
</div>

<!-- Products Section -->
<div class="container mx-auto px-4 my-6">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 justify-items-center">
    <% @products.each do |product| %>
    <!-- Product Card 1 -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden product-card w-full max-w-sm">
      <%# <%= image_tag "products/02.jpg", class: "w-full h-64 object-cover", alt: "جاكيت رجالي" %>
      <%# <%= image_tag "products/#{products.image_url}", class: "w-full h-64 object-cover", alt: product.name %>
            <% if product.image_url.present? %>
        <%= image_tag(product.images_url, class: "card-img-top", alt: product.name) rescue image_tag("logo.png", class: "card-img-top", alt: product.name) %>
      <% else %>
        <%= image_tag("logo.png", class: "card-img-top", alt: product.name) %>
      <% end %>
      <div class="p-6 text-center">
        <h3 class="text-xl font-bold mb-3 text-gray-800"><%= product.name %></h3>
        <p class="text-gray-600 mb-4 px-4"><%= product.details %></p>
        <div class="mb-4 space-y-1">
          <div class="text-sm font-semibold text-gray-700">السعر: <%= product.price %>$</div>
          <div class="text-sm font-semibold text-gray-700">المقاس: <%= product.size %></div>
        </div>
          <%= button_to('اضافة الى السلة', cart_add_to_cart_path, :class => "btn btn-primary", :form_class => "mt-5 d-inline-block")%>
      </div>
    </div>
    <% end %>
  </div>
</div>
