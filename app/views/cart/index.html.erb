<div class="container mx-auto px-4 my-6">
  <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">سلة المشتريات</h1>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Cart Items -->
    <div class="lg:col-span-2 space-y-4">
      <% @products.each do |product| %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-all duration-300 border border-gray-100">
          <div class="flex flex-col md:flex-row gap-4 p-4">
            <!-- Product Image -->
            <div class="flex-shrink-0">
              <div class="relative group">
                <%= image_tag(product.image_url, class: "w-full md:w-32 h-32 object-cover rounded-lg shadow-sm group-hover:scale-105 transition-transform duration-300", alt: product.name) %>
                <div class="absolute inset-0  bg-opacity-0 group-hover:bg-opacity-5 rounded-lg transition-all duration-300"></div>
              </div>
            </div>

            <!-- Product Details & Actions Combined -->
            <div class="flex-1 flex flex-col justify-between">
              <!-- Top Section: Info & Status -->
              <div class="flex flex-col sm:flex-row sm:justify-between sm:items-start gap-3 mb-3">
                <div class="flex-1">
                  <h3 class="text-lg font-bold text-gray-800 mb-1 hover:text-blue-600 transition-colors duration-200"><%= product.name %></h3>
                  <p class="text-gray-600 text-sm line-clamp-1 mb-2"><%= product.details %></p>

                  <!-- Product Meta in same line -->
                  <div class="flex flex-wrap gap-3 text-xs text-gray-500">
                    <span class="flex items-center gap-1">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"/>
                      </svg>
                      <%= product.category.title rescue 'غير محدد' %>
                    </span>
                    <span class="flex items-center gap-1">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M4 6h16M4 10h16M4 14h16M4 18h16"/>
                      </svg>
                      مقاس: <%= product.size rescue 'متوسط' %>
                    </span>
                  </div>
                </div>
                <span class="text-xs font-medium text-green-600 bg-green-50 px-2 py-1 rounded-full whitespace-nowrap">متوفر</span>
              </div>

              <!-- Bottom Section: Price & Actions in one row -->
              <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 pt-3 border-t border-gray-100">
                <!-- Price Section -->
                <div class="flex items-center gap-2">
                  <span class="text-xl font-bold text-blue-600"><%= product.price %>$</span>
                  <span class="text-xs text-gray-400 line-through">(<%= (product.price * 1.2).round(2) %>$)</span>
                </div>

                <!-- Quantity & Actions in compact row -->
                <div class="flex items-center gap-2">
                  <!-- Compact Quantity Controls -->
                  <div class="flex items-center bg-gray-50 rounded border">
                    <button class="p-1 hover:bg-gray-100 transition-colors duration-200">
                      <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"/>
                      </svg>
                    </button>
                    <span class="px-2 py-1 text-sm font-medium text-gray-700 min-w-[30px] text-center">1</span>
                    <button class="p-1 hover:bg-gray-100 transition-colors duration-200">
                      <svg class="w-3 h-3 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                      </svg>
                    </button>
                  </div>

                  <!-- Compact Action Buttons -->
                  <button class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded text-sm transition-colors duration-200">
                    تحديث
                  </button>
                  <button class="bg-red-500 hover:bg-red-600 text-white p-1 rounded transition-colors duration-200 group">
                    <svg class="w-4 h-4 group-hover:scale-110 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <% if @products.empty? %>
        <div class="bg-white rounded-lg shadow-lg p-8 text-center">
          <div class="text-gray-400 mb-4">
            <svg class="mx-auto h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.5 6M7 13l-1.5-6M17 13v6a2 2 0 01-2 2H9a2 2 0 01-2-2v-6" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-800 mb-2">السلة فارغة</h3>
          <p class="text-gray-600 mb-4">لم تقم بإضافة أي منتجات إلى السلة بعد</p>
          <a href="/" class="btn btn-primary">تصفح المنتجات</a>
        </div>
      <% end %>
    </div>

    <!-- Cart Summary -->
    <div class="lg:col-span-1">
      <div class="bg-white rounded-lg shadow-lg p-6 sticky top-4">
        <h2 class="text-xl font-bold text-gray-800 mb-4">ملخص الطلب</h2>

        <div class="space-y-3 mb-6">
          <div class="flex justify-between text-gray-600">
            <span>عدد المنتجات:</span>
            <span><%= session[:cart]&.size || 0 %></span>
          </div>

          <div class="flex justify-between text-gray-600">
            <span>المجموع الفرعي:</span>
            <span><%= @products.sum(&:price) %>$</span>
          </div>

          <div class="flex justify-between text-gray-600">
            <span>الشحن:</span>
            <span>مجاني</span>
          </div>

          <hr class="border-gray-200">

          <div class="flex justify-between text-lg font-bold text-gray-800">
            <span>المجموع الكلي:</span>
            <span class="text-blue-600"><%= @products.sum(&:price) %>$</span>
          </div>
        </div>

        <% unless @products.empty? %>
          <button class="btn btn-primary w-full mb-3">إتمام الشراء</button>
          <a href="/" class="block text-center text-blue-600 hover:text-blue-800 transition-colors duration-200">متابعة التسوق</a>
        <% end %>
        <!-- Payment Form -->
        <div class="mt-6 pt-6 border-t border-gray-200">
        <h3 class="text-lg font-semibold text-gray-800 mb-4">معلومات الدفع</h3>
        <form class="card p-3 border-0" id="payment-form">
          <div class="mb-3">
            <label for="card-element" class="form-label">
                اسم حامل البطاقة
              </label>
            <input dir="ltr" class="form-control my-1" type="text" name="review_text" style="width: 100%;">
          </div>
          <div class="mb-3">
            <label for="card-element" class="form-label"> رقم البطاقة
            </label>
            <div dir="ltr" id="card-element"></div>
          </div>
          <button class="btn btn-primary w-full flex items-center justify-center gap-2 disabled:opacity-50 disabled:cursor-not-allowed" id="submit">
            <div class="spinner hidden" id="spinner"></div>
            <span id="button-text">
                شراء الآن
              </span>
          </button>
          <p id="card-error" role="alert"></p>
          <p class="result-message hidden">
            <a> تمت عملية الشراء بنجاح
              </a>
          </p>
        </form>
        </div>
      </div>
    </div>
  </div>
</div>
