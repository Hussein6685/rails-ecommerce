  <div class="container mx-auto px-4 my-6">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 bg-white rounded-lg shadow-lg overflow-hidden p-6">
    <div class="flex justify-center">
      <%= image_tag(@product.image_url, class: "w-full h-auto max-w-md rounded-lg shadow-md", alt: @product.name) %>
